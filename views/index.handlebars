<div class="jumbotron text-center">
  <div class="overlay"></div>
  <div class="background-image"></div>
  <div class="caption">
    <h1>The Boston Herald Headlines</h1>
    <p class="lead">Mongo Scraper Homework assignment</p>
  </div>
  <hr class="my-4">
  <div class="container-fluid article-container">
    <a class="btn btn-primary btn-lg" href="/scrape" role="button">Click here to Scrape new articles!</a>
  </div>

  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="#"></a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link active" href="/">Home <span class="sr-only">(current)</span></a>
        <a class="nav-item nav-link" href="/headlines">Headlines</a>
        <a class="nav-item nav-link" href="/saved">Saved</a>
        <a class="nav-item nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Disabled</a>
      </div>
    </div>
  </nav>


  {{#each head}}
  <div class="card w-95">
    <div class="card-body">
      <p hidden class="card-id">{{_id}}</p> 
      <h5 class="card-title">{{title}}</h5>
      <p class="card-text">{{summary}}</p>
      <a href={{url}} target="_blank">{{url}}</a>
      <a href="#" class="btn btn-primary save-btn float-right">Save</a>
    </div>
  </div>
  {{/each}}

</div>

<footer class="footer">
  <div class="container">
    <p>Boston Herald Headline Scraper</p>
  </div>
</footer>